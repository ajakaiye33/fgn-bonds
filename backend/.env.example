# FGN Savings Bond Backend - Environment Configuration
# Copy this file to .env and customize as needed:
#   cp .env.example .env

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=sqlite:///./data/fgn_bonds.db

# =============================================================================
# Admin Authentication
# =============================================================================
ADMIN_USERNAME=admin
# Default password: "admin123" - CHANGE IN PRODUCTION!
# Generate new hash: python -c "import bcrypt; print(bcrypt.hashpw(b'yourpassword', bcrypt.gensalt()).decode())"
ADMIN_PASSWORD_HASH=$2b$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/X4.5iwEQYsZOxL2G

# =============================================================================
# JWT Settings
# =============================================================================
# CHANGE THIS IN PRODUCTION! Use: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=change-this-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
