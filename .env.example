# FGN Savings Bond Application - Environment Variables (React + FastAPI)
# Copy this file to .env and update the values
# This is for the NEW architecture - use after migration from Streamlit

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# Database (SQLite)
# =============================================================================
DATABASE_URL=sqlite:///./data/fgn_bonds.db

# =============================================================================
# Admin Authentication
# =============================================================================
# Default admin username
ADMIN_USERNAME=admin

# Generate a bcrypt hash of your password using:
# python -c "from passlib.context import CryptContext; print(CryptContext(schemes=['bcrypt']).hash('your_password'))"
# Example hash for password "admin123" (CHANGE THIS IN PRODUCTION!):
ADMIN_PASSWORD_HASH=$2b$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/X4n5IhwEQYsZOxL2G

# =============================================================================
# JWT Settings
# =============================================================================
# Generate a secure secret key using:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=change-this-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS Settings
# =============================================================================
# JSON array of allowed origins
CORS_ORIGINS=["http://localhost:3000","http://localhost","http://localhost:5173"]

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
# Set to true for JSON logs in production (better for log aggregation)
LOG_JSON=false

# =============================================================================
# Legacy MongoDB Settings (for data migration only)
# =============================================================================
# Uncomment these if you need to migrate data from the old MongoDB
# MONGO_URI=mongodb://admin:password@mongodb:27017/fgn_bonds?authSource=admin
# MONGO_DB_NAME=fgn_bonds
# MONGO_COLLECTION_NAME=applications
